{
  "family": "cdpi-pass-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::866605741038:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::866605741038:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "PLACEHOLDER_IMAGE",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp",
          "name": "backend-8000-tcp",
          "appProtocol": "http"
        }
      ],
      "command": [
        "daphne",
        "-b",
        "0.0.0.0",
        "-p",
        "8000",
        "backend.asgi:application"
      ],
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::env-cdpi-pass/.env",
          "type": "s3"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/cdpi-pass-backend",
          "awslogs-region": "sa-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "stopTimeout": 120
    }
  ]
}